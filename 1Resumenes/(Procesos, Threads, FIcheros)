char variableDondeGuardar[SIZE];

//Crear ficherp
f=fopen("file.txt","w");

//Editar fichero
fwrite(variableAEscribir,sizeof(char),strlen(variableAEscribir),f);

//Leer fichero
fread(variableDendeGuardar,sizeof(char),SIZE,f);

//Cerrar fichero
fclose(f);

